@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] logged_user = {"UpravaUcebnice", "UpravaMetadat" };
    string[] not_logged_in_user = { "ZobrazeniUcebnice", "ZobrazeniMetadat" };

    if (logged_user.Contains(ViewContext.RouteData.Values["action"].ToString()))
    {
        Layout = "~/Views/Shared/_EditLayout.cshtml";
    }
    else if (not_logged_in_user.Contains(ViewContext.RouteData.Values["action"].ToString()))

        Layout = "~/Views/Shared/_ViewLayout.cshtml";
    else
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
