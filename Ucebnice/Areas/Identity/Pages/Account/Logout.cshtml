@page
@model LogoutModel
@{
    ViewData["Title"] = "Odhlásit se";
}

<div class="row d-flex justify-content-center col-12">
    <header>
        <h1>@ViewData["Title"]</h1>
        @{
            if (User.Identity.IsAuthenticated)
            {
                <form class="form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-dark">Klikněte zde k odhlášení</button>
                </form>
            }
            else
            {
                <p>Úspěšně jste se odhlásil/a</p>
            }
        }
    </header>
</div>