@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <style>
        .center {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 200px;
        }

    </style>
    <div class="center">

        <h1>Odhlášení:</h1>
        @{
            if (User.Identity.IsAuthenticated)
            {
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-dark">Klikněte sem pro odhlášení</button>
                </form>
            }
            else
            {
                <p>Úspěšně jste se odhlásili.</p>
            }
        }
    </div>

</header>